<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="03dp"
        android:background="@drawable/card_bg">

        <ImageView
            android:id="@+id/EmpImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_avatar"
            android:background="@drawable/rounded_drawable" />

        <TextView
            android:id="@+id/tvEmpName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/EmpImage"
            android:layout_toRightOf="@+id/EmpImage"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvEmpDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEmpName"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/EmpImage"
            android:layout_toRightOf="@+id/EmpImage"
            android:text="From Saad Rasheed on June 14th"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvLeaveType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEmpDetails"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/EmpImage"
            android:layout_toRightOf="@+id/EmpImage"
            android:hint="Leave Type"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_TotalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLeaveType"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/EmpImage"
            android:layout_toRightOf="@+id/EmpImage"
            android:hint="Total days"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvRemarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_TotalTime"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/EmpImage"
            android:layout_toRightOf="@+id/EmpImage"
            android:text="Reason"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRemarks"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/EmpImage"
            android:layout_toRightOf="@+id/EmpImage"
            android:hint="Status"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btn_Approve"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_below="@+id/tvStatus"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="08dp"
            android:background="#228B22"
            android:drawableStart="@drawable/ic_approve_icon"
            android:padding="05dp"
            android:text="Approve"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_Reject"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_below="@+id/tvStatus"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="08dp"
            android:layout_toEndOf="@+id/btn_Approve"
            android:background="#D60000"
            android:drawableStart="@drawable/ic_reject_icon"
            android:padding="05dp"
            android:text="Reject"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_marginBottom="04dp"/>

    </RelativeLayout>

</RelativeLayout>